<div class="row">
<div class="col-xs-12">
	<div class="hr hr-18 dotted hr-double"></div>
	
	<div class="row">
		<div class="col-xs-12">
			<h3 class="header smaller lighter blue">用户列表</h3>
			<div class="table-responsive">
				<table id="sample-table-2" class="table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th class="center">
								<label>
									<input type="checkbox" class="ace" />
									<span class="lbl"></span>
								</label>
							</th>
							<th>用户名</th>
							<th>用户类型</th>
							<th class="hidden-480">email</th>
							
							<th>
								<i class="icon-time bigger-110 hidden-480"></i>
								电话
							</th>
							<th class="hidden-480">注册时间</th>
							
							<th class="hidden-480">操作</th>
						</tr>
					</thead>
					
					<tbody id = "contextBody">
						
					</tbody>
				</table>
			</div>
		</div>
	</div>
	
</div>
</div>

<script defer>
			$.ajax({
	            	type:"GET",
	            	url:"http://localhost:8888/admin/userList?page=1&size=20",
	            	success:function(data){
          					for (var i = 0; i < data.length; i++) {
          						var uid = data[i].uid;
          						var name = data[i].name;
	          					var role = data[i].role;
	          					if(role==1){
	          						role="卖家";
	          					}else{
	          						role="买家";
	          					}
	          					var email = data[i].email;
	          					var phone = data[i].contact;
	          					var time = data[i].time.minute;
	          					$("#contextBody").append("<tr><td class=\"center\"><label><input type=\"checkbox\" class=\"ace\" /><span class=\"lbl\"></span></label></td><td><a href=\"#\">"+name+"</a></td><td>"+role+"</td><td class=\"hidden-480\">"+email+"</td><td>"+phone+"</td><td class=\"hidden-480\"><span class=\"label label-sm label-warning\">"+time+"</span></td><td class=\"hidden-480\"><span class=\"label label-sm label-warning\"><a href=\"/admin/delete?id="+uid+"\"><span style=\"font-size:16px;color:black\">删除</span></a></span></td></tr>");
          					};
	            	},
	          		error:function(data){
	          		}
          		});
</script>